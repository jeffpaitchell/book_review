<h1>Edit Book</h1>

<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
	<!-- We put our category select tag here 
	This looks slightly different than what you see in '_form.html.erb' so that the actual category is displayed here-->
	<%= f.select :category_id, @categories %>
	<%= f.file_field :book_img %>
	<%= f.input :title, label: "Book Title" %>
	<%= f.input :description %>
	<%= f.input :author %>
	<%= f.button :submit %>
<% end %>	